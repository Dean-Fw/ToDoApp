<ListItemWithCheckbox>:
	id: list_item
	markup: True

	LeftCheckbox:
		id: check
		on_release:
			root.mark(check, list_item)
	
	IconRightWidget:
		icon: "trash-can-outline"
		theme_text_color: "Custom"
		text_color: 1,0,0,1
		on_release:
			root.delete_item(list_item)

<ToDoListPage>:
	MDLabel:
		id: ToDoListName
		halign: "left"
		padding: [10,0]
		markup: True
		text: "[u][size=32][b]ToDo list name[/b][/size][/u]"
		pos_hint: {"y": .45}
	
	ScrollView:
		pos_hint: {"center_y": .5, "center_x": .5}
		size_hint: .9, .8

		MDList:
			id: Container
		
	MDFloatingActionButton:
		icon: "plus-thick"
		on_release: root.show_task_dialog()
		elevation_noraml: 10
		pos_hint: {"x": .9, "y":.05}

<DialogContent>:
    orientation: "vertical"
    spacing: "10dp"
    size_hint: 1, None
    height: "130dp"

    GridLayout:
        rows: 1

        MDTextField:
            id: task_text
            hint_text: "Add Task..."
            pos_hint: {"center_y": .4}
            max_text_length: 50
            on_text_validate: (app.root.add_task(task_text, date_text.text), app.root.close_dialog())

        MDIconButton:
            icon: 'calendar'
            on_release: root.show_date_picker()
            padding: '10dp'

    MDLabel:
        spacing: '10dp'
        id: date_text

    BoxLayout:
        orientation: 'horizontal'

        MDRaisedButton:
            text: "SAVE"
            on_release: (app.root.add_task(task_text, date_text.text), app.root.close_dialog())
        MDFlatButton:
            text: 'CANCEL'
            on_release: app.root.close_dialog()

