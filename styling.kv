<UserCreatedProjectListItem>:
    icon: "folder"
    text: ""
    on_release:
        app.root.ids.nav_drawer.set_state("close")
        app.root.ids.screen_manager.current = self.text
        app.root.ids.topBar.title = self.text

MDScreen:

    MDTopAppBar:
		id: topBar
        pos_hint: {"top": 1}
        elevation: 4
        title: "Home"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager
            HomeScreen:
                name: "home"

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:
                id: nav_menu
                MDNavigationDrawerHeader:
                    title: "Note Taking app"
                    text: "Navigation Menu"
                    spacing: "4dp"

                MDNavigationDrawerItem:
                    icon: "home"
                    text: "Home"
                    on_press:
                        app.root.ids.nav_drawer.set_state("close")
			    	    app.root.ids.topBar.title = "Home"
                        app.root.ids.screen_manager.current = "home"

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Your Projects:"

                MDNavigationDrawerItem:
                    icon: "plus-thick"
                    text: "Create a Project"
                    on_release:
                        app.root.ids.screen_manager.get_screen("home").open_create_project_dialog()
                        app.root.ids.nav_drawer.set_state("close")



# Home screen styling
<HomeScreen>:
    
    MDBoxLayout:
        
        orientation: "vertical"

        Widget:
            size_hint: 1, None
            height: "10dp"

        MDFloatLayout:	
	    	ScrollView:
	    		pos_hint: {"center_y": .5, "center_x": .5}
	    		size_hint: .9, .8

	    		MDList:
	    			id: Container
                    spacing: "5dp"
    
	    	MDFloatingActionButton:
                id: plus_button
	    		icon: "plus-thick"
	    		elevation_noraml: 10
	    		pos_hint: {"x": .85, "y":.05}
                on_release: root.open_dropdown_menu()

# Dialog box stylings
<CreateProjectDialog>:
    orientation: "vertical"
	padding: "5dp"
	size_hint: 1, None
	height: "130dp"

	MDTextField:
		id: project_name_input
		hint_text: "Name of Project"
		pos_hint: {"center_y": .4}
        max_text_length: 50

	BoxLayout:
        orientation: 'horizontal'

        MDRaisedButton:
            id: save_button
            text: "SAVE"
            on_release: (root.create_project(), root.dismiss_self())
        MDFlatButton:
            text: 'DISCARD'
            on_release: root.dismiss_self()

<CreateListDialog>:
    orientation: "vertical"
	padding: "5dp"
