# ToDo List view Styling
<ToDoListView>:
	MDFloatLayout:
		MDLabel:
			id: title
			halign: "left"
			padding: [10,0]
			markup: True
			text: "[u][b]Your ToDo lists[/b][/u]"
			font_size: "32dp"
			pos_hint: {"y": .45}
		
		ScrollView:
			pos_hint: {"center_y": .5, "center_x": .5}
			size_hint: .9, .8
	
			MDList:
				id: Container
			
		MDFloatingActionButton:
			icon: "plus-thick"
			on_release: root.show_task_dialog()
			elevation_noraml: 10
			pos_hint: {"x": .85, "y":.05}

<CreateListDialog>:
	orientation: "vertical"
	padding: "5dp"
	size_hint: 1, None
	height: "130dp"

	MDTextField:
		id: list_text
		hint_text: "Name ToDo list..."
		pos_hint: {"center_y": .4}
        max_text_length: 50

	BoxLayout:
        orientation: 'horizontal'

        MDRaisedButton:
            text: "SAVE"
            on_release: (app.root.get_screen("ListView").add_task(list_text), app.root.get_screen("ListView").close_dialog())
        MDFlatButton:
            text: 'CANCEL'
            on_release: app.root.get_screen("ListView").close_dialog()

<ListItemWithoutCheckbox>:
	id: list_item
	IconRightWidget:
		icon: "trash-can-outline"
		theme_text_color: "Custom"
		text_color: 1,0,0,1
		on_release:
			root.delete_item(list_item)

# Individual ToDo List Styling
<ListItemWithCheckbox>:
	id: list_item
	markup: True
	LeftCheckbox:
		id: check
		on_release:
			root.mark(check, list_item)
	
	IconRightWidget:
		icon: "trash-can-outline"
		theme_text_color: "Custom"
		text_color: 1,0,0,1
		on_release:
			root.delete_item(list_item)

<ToDoListPage>:
	MDFloatLayout:
		MDLabel:
			id: ToDoListName
			halign: "left"
			padding: [10,0]
			markup: True
			pos_hint: {"y": .45}

		ScrollView:
			pos_hint: {"center_y": .5, "center_x": .5}
			size_hint: .9, .8

			MDList:
				id: Container

		MDRectangleFlatIconButton:
			icon: "keyboard-backspace"
			text: "Return to ToDo list view"
			pos_hint: {"x": .05, "y":.05}
			on_release: app.root.current = "ListView"

		MDFloatingActionButton:
			icon: "plus-thick"
			on_release: root.show_task_dialog()
			elevation_noraml: 10
			pos_hint: {"x": .85, "y":.05}

<DialogContent>:
    orientation: "vertical"
    padding: "20dp"
    size_hint: 1, None
    height: "200dp"

    MDTextField:
        id: task_text
        hint_text: "Add Task..."
        pos_hint: {"center_y": .4}
        max_text_length: 50
	
	GridLayout:
        rows: 1
    	MDRectangleFlatIconButton:
			icon: 'calendar'
    	    text: 'Add a Deadline'
    	    on_release: root.show_date_picker()
    	MDLabel:
    	    id: date_text
    BoxLayout:
        orientation: 'horizontal'

        MDRaisedButton:
            text: "SAVE"
            on_release: (app.root.current_screen.add_task(task_text, date_text), app.root.current_screen.close_dialog())
        MDFlatButton:
            text: 'CANCEL'
            on_release: app.root.current_screen.close_dialog()


