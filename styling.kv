# Card Stylings
<ProjectCard>:
    id: project_card
    padding: "10dp"
    size_hint: 1, None
    height: "75dp"
    md_bg_color: "#2894f4"
    on_release: 
        app.root.ids.screen_manager.current = project_title.text
        app.root.ids.topBar.title = project_title.text
    MDRelativeLayout:

        MDIconButton:
            icon: "chevron-right"
            pos_hint: {"right": 1, "center_y": 0.5}

        MDLabel:
            id: project_title
            font_size: "25dp"
            spacing:"10dp"
            bold: True

<ToDoListcard>:
    id: to_do_list_card
    padding: "10dp"
    size_hint: 1, None
    height: "75dp"
    md_bg_color: "#2894f4"
    MDBoxLayout:
        size_hint_y: .2
        orientation: "vertical"
        MDGridLayout:
            cols: 2 
            MDLabel:
                id: list_name_title
                font_size: "25dp"
                bold: True
            MDBoxLayout:
                size_hint_x: .15
                MDIconButton:
                    id: options_button
                    on_release: root.open_drop_menu()
                    icon: "dots-horizontal"
                MDIconButton:
                    icon: "plus-thick"
                    on_release: root.show_create_task_dialog()
        
        MDList:
			id: to_do_list
		

<ListItemWithCheckbox>:
	id: list_item
	markup: True
	on_release: root.open_edit_task_dialog()
	LeftCheckbox:
		id: check
		on_release:
			root.mark(check, list_item)
	
	IconRightWidget:
		icon: "trash-can-outline"
		theme_text_color: "Custom"
		text_color: 1,0,0,1
		on_release:
			root.delete_item(list_item)

<NoteCard>:
    id: note_card
    padding: "10dp"
    size_hint: 1, None
    height: "75dp"
    md_bg_color: "#2894f4"
    on_release: root.open_edit_note_dialog()
    MDBoxLayout:
        orientation: "vertical"
        MDGridLayout:
            size_hint_y: .2
            pos_hint: {"top": 1}
            cols: 2 
            MDLabel:
                id: note_title
                font_size: "25dp"
                bold: True
            MDIconButton:
                size_hint_x: .1
                id: options_button
                on_release: root.open_drop_menu()
                icon: "dots-horizontal"
        MDLabel:
			id: note
            font_size: "18dp"
        MDGridLayout:
            pos_hint: {"center_y": 1}
            size_hint_y: .4
            cols: 2
            MDIconButton:
                id: notification_button
                on_release: root.show_date_picker()
                icon: "bell"
            MDLabel:
                id: deadline

<ImageCard>:
    md_bg_color: "#2894f4"
    size_hint: 1, None
    height: "125dp"
    MDBoxLayout:
        orientation: "vertical"
        MDIconButton:
            pos_hint: {"right": 1}
            size_hint_x: .1
            id: options_button
            #on_release: root.open_drop_menu()
            icon: "dots-horizontal"
        Image:
            id: image_space
            allow_stretch: True
            keep_ratio: False