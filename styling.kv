<CreateTaskDialog>:
    orientation: "vertical"
    sapcing: "20dp"
    size_hint: 1, None
    height: "200dp"

    MDTextField:
        id: task_text
        hint_text: "Add Task..."
        pos_hint: {"center_y": .4}
        max_text_length: 50
	
	BoxLayout:
		orientation: "vertical"
    	MDRectangleFlatIconButton:
			icon: 'calendar'
    	    text: 'Add a Deadline'
    	    on_release: root.show_date_picker()
    	MDLabel:
			spacing: "10dp"
    	    id: date_text
	BoxLayout:
		id: save_or_exit
        orientation: 'horizontal'
        MDRaisedButton:
            text: "SAVE"
            on_release: root.add_task(), root.close_dialog()
    	MDFlatButton:
            text: 'DISCARD'
            on_release: root.close_dialog()

